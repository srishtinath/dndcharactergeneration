<div class="container">
    <h1>Create a user!</h1>


    <% if flash[:error] %>
    <% flash[:error].each do |error| %>
    <%= error %>
    <% end %>
    <% end %>


    <%= form_for @user do |f| %>
    <p><%= f.label :name, "Create username" %></p>
    <%= f.text_field :name %>

    <p><%= f.label :password, "Create password" %></p>
    <%= f.password_field :password %>

    <p><%= f.label :password, "Password Confirmation" %></p>
    <%= f.password_field :password_confirmation %>

    <p><%= f.submit %></p>
    <% end %>
    </div>