<p>
<div class = dd_block>
<h1>Create Your Username!</h1>

<% if flash[:error] %>
<% flash[:error].each do |error| %>
<%= error %>
<% end %>
<% end %>


<%= form_for @user do |f| %>
<p>
<%= f.label :name, "Create Username:" %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :password, "Create Password:" %>
<%= f.password_field :password %>
</p>
<p>
<%= f.label :password, "Password Confirmation:" %>
<%= f.password_field :password_confirmation %>
</p>
<p><%= f.submit nil, class: 'dd_button'%></p>
<% end %>
</div>