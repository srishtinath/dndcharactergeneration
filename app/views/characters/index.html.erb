
<body>
    
<% if @characters.empty? || @characters.nil? %>
    <h1>You don't have any characters!</h1>
<% end %>

<% @characters.each do |character|%>
<h2><p> <%= link_to character.name, character_path(character) %> </p></h2>
<%= button_to 'Delete Character', character_path(character), method: :delete, class: 'dd_button' %>
<% end %>

<p><%= button_to  "Create A New Character", new_character_path, method: 'get', class: 'dd_button' %></p>

</body>
