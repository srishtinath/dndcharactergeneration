<p> </p>
<div class ="dd_block"><h1><p>Name: <%= @character.name %></p></h1></div>
<div class ="dd_block">
<h3><p>Class: <%= @job.name %></p></h3>
<p>Level: <%= @character.level %> | HP: <%= @character.hp %></p>
</div>
<p></p>
<div class ="dd_block">
<h3>Stats</h3>
<p>Strength: <%= @character.strength %> | Dexterity: <%= @character.dexterity %> | Constitution: <%= @character.constitution %></p>
<p>Intelligence: <%= @character.intelligence %> | Wisdom: <%= @character.wisdom %> | Charisma: <%= @character.charisma %></p>
<p></p>
<p>Proficiency Bonus: <%= @character.proficiency_bonus %></p>
<p></p>

<p> <%= button_to 'Edit Character Stats', edit_character_path(@character), method: :get, class: 'dd_button' %></p>
</div>
<% session[:coming_from_show] = true %>
<div class ="dd_block">
<h3>Abilities</h3>
<% @character.abilities.each do |ability| %>
<% @char_abil = CharacterAbility.find_by(ability: ability, character: @character) %>
<p> <%= link_to  ability.name, character_ability_path(@char_abil) %> </p> 
<% end %>

<p><%= button_to 'Add Ability', new_character_ability_path, method: :get, class: 'dd_button' %></p>
<p><%= button_to 'Delete all abilities', delete_abilities_path, method: :delete, class: 'dd_button' %></p>
</div>
<div class ="dd_block">
<h3>Spells</h3>
<% @character.spells.each do |spell| %>
<% @char_spell = CharacterSpell.find_by(spell: spell, character: @character) %>
<p> <%= link_to  spell.name, character_spell_path(@char_spell) %> </p> 
<% end %>

<p><%= button_to 'Add Spell', new_character_spell_path, method: :get, class: 'dd_button' %></p>
<p><%= button_to 'Delete all spells', delete_spells_path, method: :delete, class: 'dd_button' %></p>
</div>
<p><%= button_to 'View another character', characters_path, method: :get, class: 'dd_button' %></p>